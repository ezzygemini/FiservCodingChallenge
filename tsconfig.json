{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2016.array.include", "dom", "esnext.asynciterable"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "sourceRoot": "/",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "inlineSources": true,
    "sourceMap": true,
    "removeComments": false
  }
}